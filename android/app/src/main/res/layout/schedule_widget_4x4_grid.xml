<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card_bg"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_4x4_grid_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/widget_text_secondary"
            android:text="第五周" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/widget_text_secondary"
                android:text="" />
            <TextView
                android:id="@+id/widget_4x4_grid_day1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold"
                android:text="周一" />
            <TextView
                android:id="@+id/widget_4x4_grid_day2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold"
                android:text="周二" />
            <TextView
                android:id="@+id/widget_4x4_grid_day3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold"
                android:text="周三" />
            <TextView
                android:id="@+id/widget_4x4_grid_day4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold"
                android:text="周四" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/widget_4x4_grid_row1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/widget_4x4_grid_time1"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/widget_text_secondary"
                    android:text="07:00\n07:50" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell1_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty">
                    <TextView
                        android:id="@+id/widget_4x4_grid_txt_1_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:visibility="gone" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell1_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell1_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_4x4_grid_row2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/widget_4x4_grid_time2"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/widget_text_secondary"
                    android:text="09:00\n09:50" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell2_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell2_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell2_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell2_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_4x4_grid_row3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/widget_4x4_grid_time3"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/widget_text_secondary"
                    android:text="11:00\n11:50" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell3_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell3_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell3_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell3_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_4x4_grid_row4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/widget_4x4_grid_time4"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/widget_text_secondary"
                    android:text="14:00\n14:50" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell4_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell4_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell4_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
                <FrameLayout
                    android:id="@+id/widget_4x4_grid_cell4_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="4dp"
                    android:background="@drawable/widget_cell_bg_empty" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
