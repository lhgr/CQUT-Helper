<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card_bg"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/widget_4x2_header_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:text="今天 / 星期四" />
            <TextView
                android:id="@+id/widget_4x2_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:text="第5周" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_4x2_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/widget_4x2_time1_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text_secondary"
                    android:text="08:00" />
                <TextView
                    android:id="@+id/widget_4x2_time1_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text_secondary"
                    android:text="09:00" />
            </LinearLayout>
            <View
                android:id="@+id/widget_4x2_bar1"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="8dp"
                android:background="@color/widget_bar_blue"
                android:minHeight="24dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/widget_4x2_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_text_primary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="大学英语" />
                <TextView
                    android:id="@+id/widget_4x2_detail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text_secondary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="第1-2节 | 教三楼3-217 | 蔡老师" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_4x2_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/widget_4x2_time2_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text_secondary"
                    android:text="10:00" />
                <TextView
                    android:id="@+id/widget_4x2_time2_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text_secondary"
                    android:text="12:00" />
            </LinearLayout>
            <View
                android:id="@+id/widget_4x2_bar2"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="8dp"
                android:background="@color/widget_bar_blue"
                android:minHeight="24dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/widget_4x2_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_text_primary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="高等数学" />
                <TextView
                    android:id="@+id/widget_4x2_detail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/widget_text_secondary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="第3-4节 | 教三楼4-317 | 王老师" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/widget_4x2_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="11sp"
            android:textColor="@color/widget_text_secondary"
            android:text="其他3节课程・・・" />
    </LinearLayout>
</FrameLayout>
