<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card_bg"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/widget_2x2_header_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:text="今天 / 星期四" />
            <TextView
                android:id="@+id/widget_2x2_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:text="第5周" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_2x2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="大学英语" />

        <TextView
            android:id="@+id/widget_2x2_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="11sp"
            android:textColor="@color/widget_text_secondary"
            android:drawablePadding="4dp"
            android:text="08:00-09:00" />

        <TextView
            android:id="@+id/widget_2x2_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:textColor="@color/widget_text_secondary"
            android:drawablePadding="4dp"
            android:text="教三楼3-217" />

        <TextView
            android:id="@+id/widget_2x2_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="11sp"
            android:textColor="@color/widget_text_secondary"
            android:text="其他3节课程" />
    </LinearLayout>
</FrameLayout>
